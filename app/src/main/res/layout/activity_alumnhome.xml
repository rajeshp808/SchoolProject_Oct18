<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".alumnhome">
    <!--<android.support.v7.widget.Toolbar
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#8233e9"/>  -->
    <ImageView
        android:id="@+id/iv_profiletop"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="#98acd4"
        android:contentDescription="@string/profile_home_wall"
        app:srcCompat="@drawable/hd_assembly"/>

    <LinearLayout
        android:id="@+id/linear_top1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_profile_pic_holder"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:scaleType="centerInside"
                android:contentDescription="@string/profile_home_wall"
                 />

            <TextView
                android:id="@+id/tv_profile_name"
                style="@android:style/Widget.DeviceDefault.TextView.SpinnerItem"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="@string/profile_name"
                android:textAlignment="center"
                android:textColor="#06068c"
                android:textColorHighlight="@color/colorScrollBar" />


        </LinearLayout>

        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:baselineAligned="false">
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/ib_prof_menu1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="#180979"
                    android:scaleType="centerInside"
                    android:contentDescription="@string/profile_home_wall"
                    android:src="@drawable/alumnblue" />
                <ImageButton
                    android:id="@+id/ib_prof_menu3"
                    android:layout_marginTop="20dp"
                    android:background="#180979"
                    android:layout_width="120dp"
                    android:contentDescription="@string/profile_home_wall"
                    android:layout_height="120dp" />

                

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/ib_prof_menu2"
                    android:background="#180979"
                    android:layout_width="120dp"
                    android:contentDescription="@string/profile_home_wall"
                    android:layout_height="120dp" />

                <ImageButton
                    android:id="@+id/ib_prof_menu4"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    android:background="#180979"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/profile_home_wall"
                    android:src="@drawable/map2" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>